FROM node:20-alpine

# Install git for npm dependencies
RUN apk add --no-cache git

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application files
COPY . .

# Create sessions directory
RUN mkdir -p /app/sessions

# Expose port
EXPOSE 3001

# Start service
CMD ["npm", "start"]
