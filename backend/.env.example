APP_NAME="CRM Whitelabel"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3100

LOG_CHANNEL=stack
LOG_LEVEL=debug

DB_CONNECTION=pgsql
# Use "postgres" quando o app roda dentro do Docker (nome do serviço). Use "127.0.0.1" para rodar migrate/artisan na sua máquina com Postgres local.
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=crm_whitelabel
DB_USERNAME=postgres
DB_PASSWORD=postgres

CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file

# JWT Configuration - CRITICAL: Generate a strong secret using: openssl rand -base64 64
JWT_SECRET=
JWT_TTL=1440
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# WhatsApp: use http://whatsapp:3001 com API no Docker; use http://localhost:3002 se a API rodar na máquina (porta 3002 no compose).
WHATSAPP_SERVICE_URL=http://whatsapp:3001
WHATSAPP_WEBHOOK_URL=http://api:8000/api/whatsapp/webhook

# Gemini AI Configuration (Google - FREE TIER)
# Get your free API key at: https://aistudio.google.com/apikey
# Free tier: 15 requests/minute, 1M tokens/month
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# Groq AI (Primary - Free tier: 30 RPM, 14,400/day)
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# Email OAuth2 Configuration
# Gmail OAuth2 (Get credentials at: https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8000/api/email/accounts/oauth/gmail/callback

# Microsoft OAuth2 (Get credentials at: https://portal.azure.com/#view/Microsoft_AAD_RegisteredApps)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_REDIRECT_URI=http://localhost:8000/api/email/accounts/oauth/outlook/callback

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
